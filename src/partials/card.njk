{% macro card(project) %}
<!-- FEATURE 1 -->
        <div id="{{ project.id }}" class="feature">
            <div class="bit-1">
                <h2 class="feature-title">{{ project.title }}</h2></div>
            <div class="bit-2"> <img src="http://placehold.it/200x150"></div>
            <div class="bit-2">
                <p>{{ project.description }}</p>
            </div>
        </div>
{% endmacro %}